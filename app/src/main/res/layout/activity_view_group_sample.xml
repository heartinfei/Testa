<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wq.labelviewsample.ViewGroupSampleActivity">

    <RelativeLayout
        android:layout_width="128dp"
        android:layout_height="128dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/test" />

        <com.wangqiang.libs.labelviewlib.LabelView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff0000"
            android:gravity="center"
            android:text="快捷"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            app:label_distance="8dp"
            app:label_position="TOP_LEFT" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/test" />

        <com.wangqiang.libs.labelviewlib.LabelView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0000ff"
            android:gravity="center"
            android:text="快捷"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            app:label_distance="8dp"
            app:label_position="TOP_RIGHT" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/test" />

        <com.wangqiang.libs.labelviewlib.LabelView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff0000"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="快捷"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            app:label_distance="-4dp"
            app:label_position="TOP_LEFT" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/test" />

        <com.wangqiang.libs.labelviewlib.LabelView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0000ff"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="快捷"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            app:label_distance="-4dp"
            app:label_position="TOP_RIGHT" />
    </RelativeLayout>
</LinearLayout>
